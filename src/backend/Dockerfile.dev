FROM golang:1.23.1-alpine

WORKDIR /app

# Install build essentials and SQLite
RUN apk add --no-cache \
    gcc \
    musl-dev \
    sqlite-dev \
    sqlite-libs \
    build-base

# Enable CGO
ENV CGO_ENABLED=1
ENV GOOS=linux

# Install Air
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Create necessary directories
RUN mkdir -p tmp frontend/templates internal/db

# Copy .air.toml first
COPY .air.toml .

# Then copy the rest
COPY . .

# Run air with debug output
CMD ["air", "-d"]

